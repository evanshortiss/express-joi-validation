{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "chai": true,
    "expect": true,
    "sinon": true
  },
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "arrow-body-style": 0,
    "arrow-parens": 1,
    "brace-style": [2, "1tbs"],
    "camelcase": 2,
    "comma-dangle": 2,
    "comma-spacing": 2,
    "computed-property-spacing": [2, "never"],
    "curly": 2,
    "dot-notation": 2,
    "eol-last": 0,
    "eqeqeq": [2, "smart"],
    "no-extra-parens": 1,
    "no-floating-decimal": 2,
    "no-debugger": 2,
    "no-redeclare": 2,
    "no-spaced-func": 2,
    "no-undef": 2,
    "no-underscore-dangle": 0,
    "no-unused-vars": [2, {"vars": "all", "args": "after-used"}],
    "no-use-before-define": [1, "nofunc"],
    "no-warning-comments": 0,
    "object-curly-spacing": [2, "never"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "keyword-spacing": [2, { "after": true }],
    "space-infix-ops": 2,
    "strict": 0,
    "valid-jsdoc": 0
  }
}
